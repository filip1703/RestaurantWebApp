@model ProjektRestauracja.WebUI.Models.Visit

@{
    ViewBag.Title = "Dodaj rezerwację";
}


<div class="panel">
    <div class="panel-heading">
        <h2>Nowa rezerwacja</h2>
    </div>
    <div class="panel-body">
        <p class="lead">Aby dodać rezerwację wpisz niezbędne dane:</p>

        @using (Html.BeginForm()) {

            @Html.ValidationSummary()



            <div class="form-group">
                @Html.LabelFor(x => x.VisitDateTime, "Data i godzina wizyty:")
                @Html.TextBoxFor(x => x.VisitDateTime, new { @class = "form-control", @type = "datetime-local" })

            </div>
            

            <h3><b>Stolik</b></h3>
            <div class="form-group">
                @Html.LabelFor(x => x.VisitTable.Size, "Rozmiar:")
                @Html.DropDownListFor(x => x.VisitTable.Size, new SelectList(new[] { 2, 4, 6, 8 }), new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.VisitTable.TableLocation, "Lokalizacja:")
                @Html.DropDownListFor(x => x.VisitTable.TableLocation,
                                  new SelectList(Enum.GetNames(typeof(ProjektRestauracja.Domain.Entities.Location))), new { @class = "form-control" })
            </div>

            <div class="text-center">
                @Html.ActionLink("Powrót do listy", "List", "Booking",null, new { @class="btn btn-primary"})       
                <input class="btn btn-success" type="submit" value="Zarezerwuj" />
            </div>

        }

        
    </div>
</div>



