@model ProjektRestauracja.Domain.Entities.Booking


<div class="well">

   
    <div class="lead pull-right">
        @if (Model.Realization) { <p>Dzięki za wizytę <span class="label label-primary">@Model.VisitDateTime</span></p> }
        else if (Model.VisitDateTime.CompareTo(DateTime.Now) == -1) { <p>Szkoda, że nie mogłeś przyjść <span class="label label-primary">@Model.VisitDateTime</span></p> }
        else { <p>Czekamy na Ciebie <span class="label label-primary">@Model.VisitDateTime</span></p> }
</div>

    <div class="lead"><p>Zarezerwowano <span class="label label-primary">@Model.BookingDate.ToString("d")</span></p></div>
    
</div>
